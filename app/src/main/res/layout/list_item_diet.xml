<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txTheday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon"
        android:textSize="18sp"
        android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="day's Plan Purpose/Description:"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/ppPDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ppPDesc"
        android:textColor="@color/blue" />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#CBFF6464" />

    <!-- Breakfast Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textSize="18sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#CBFF6464" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast Time: " />

            <TextView
                android:id="@+id/bfTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bfTime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast EsKl: " />

            <TextView
                android:id="@+id/bfEsKl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bfEsKl" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast Remark: " />

            <TextView
                android:id="@+id/bfRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bfRemark" />
        </LinearLayout>

    <!-- Lunch Section -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#CBFF6464" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#CBFF6464" />
    <!-- Lunch Time -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch Time: " />

        <TextView
            android:id="@+id/luTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="luTime" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch EsKl: " />

        <TextView
            android:id="@+id/luEsKl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="luEsKl" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch Remark: " />

        <TextView
            android:id="@+id/luRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="luRemark" /> <!-- Placeholder value -->
    </LinearLayout>

    <!-- Dinner Section -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#CBFF6464" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#CBFF6464" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner Time: " />

        <TextView
            android:id="@+id/dnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dnTime" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner EsKl: " />

        <TextView
            android:id="@+id/dnEsKl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dnEsKl" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner Remark: " />

        <TextView
            android:id="@+id/dnRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dnRemark" />
    </LinearLayout>
</LinearLayout>

