<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diet.DietSearchFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchPlanView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightpink" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:listitem="@layout/list_item_diet_search"/>

        <Button
            android:id="@+id/dsBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="Back" />

        <Button
            android:id="@+id/dsSearchWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightred"
            android:text="Search On Web" />
    </LinearLayout>
</FrameLayout>